<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@color/color_primary">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/userphoto"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:titleTextColor="@color/black"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/user_info_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:background="@color/grey"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        style="@style/user_info_item"
                        android:layout_weight="0.25">

                        <TextView
                            style="@style/user_info_date"
                            android:id="@+id/RangNum"
                            android:text="@string/profile.rating.dummy"/>

                        <TextView
                            style="@style/user_info_text"
                            android:id="@+id/RangText"
                            android:text="@string/profile.rating.hint"/>

                    </LinearLayout>

                    <View
                        style="@style/ver_separator"/>

                    <LinearLayout
                        style="@style/user_info_item"
                        android:layout_weight="0.5">

                        <TextView
                            style="@style/user_info_date"
                            android:id="@+id/StrCodNum"
                            android:text="@string/profile.string_counter.dummy"/>

                        <TextView
                            style="@style/user_info_text"
                            android:id="@+id/StrCodText"
                            android:text="@string/profile.string_counter.hint"/>

                    </LinearLayout>

                    <View
                        style="@style/ver_separator"/>
                    <LinearLayout
                        style="@style/user_info_item"
                        android:layout_weight="0.25">

                        <TextView
                            style="@style/user_info_date"
                            android:id="@+id/ProgectNum"
                            android:text="@string/profile.projects.dummy"/>

                        <TextView
                            style="@style/user_info_text"
                            android:id="@+id/ProgectText"
                            android:text="@string/profile.projects.hint"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_big_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/user_info_edit_text"
                                android:id="@+id/phone_et"
                                android:hint="@string/profile.phone.hint"
                                android:inputType="phone"
                                android:text="@string/profile.phone.dummy"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/CallImg"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"
                        android:layout_weight="0"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:layout_marginLeft="@dimen/spacing_larger_72"
                    android:background="@color/grey_light"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/EmailImeg"
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_big_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/user_info_edit_text"
                                android:id="@+id/email_et"
                                android:hint="@string/profile.email.hint"
                                android:inputType="textEmailAddress"
                                android:text="@string/profile.email.dummy"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/EmailImg"
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"
                        android:layout_weight="0"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        android:id="@+id/WKImeg"
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk_circle_black_24dp"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_big_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/user_info_edit_text"
                                android:id="@+id/vk_et"
                                android:hint="@string/profile.vk.hint"
                                android:inputType="text"
                                android:text="@string/profile.vk.dummy"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/VKImg"
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        android:layout_weight="0"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        android:id="@+id/GitHubImeg"
                        style="@style/icon.left"
                        android:src="@drawable/github"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_big_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/user_info_edit_text"
                                android:id="@+id/github_et"
                                android:hint="@string/profile.repository.hint"
                                android:inputType="text"
                                android:text="@string/profile.repository.dummy"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/GitHubImg"
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        android:layout_weight="0"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">

                    <ImageView
                        android:id="@+id/UserImg"
                        style="@style/icon.left"
                        android:src="@drawable/ic_account"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_big_72"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/user_info_edit_text"
                                android:id="@+id/bio_et"
                                android:hint="@string/profile.about.hint"
                                android:inputType="text"
                                android:text="@string/profile.about.dummy"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"/>

</android.support.v4.widget.DrawerLayout>