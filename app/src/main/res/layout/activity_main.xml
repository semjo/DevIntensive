<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11">

            <EditText
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="5"
                android:background="#5d5d5d"
                android:textAlignment="center"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="212dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="5"

                android:background="#5d5d5d"
                android:textAlignment="center"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="5"
                android:background="#5d5d5d"
                android:textAlignment="center"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.11">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Рейтинг"
                    android:background="#5d5d5d"
                    android:textAlignment="center"
                    android:textColor="#ffffff"/>

                <EditText
                    android:layout_width="212dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Написано строк кода"

                    android:background="#5d5d5d"
                    android:textAlignment="center"
                    android:textColor="#ffffff"/>

                <EditText
                    android:layout_width="108dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Проектов"
                    android:background="#5d5d5d"
                    android:textAlignment="center"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/spacing_small_8"
             android:layout_marginBottom="@dimen/spacing_small_8">

             <ImageView
                 style="@style/icon.left"
                 android:src="@drawable/ic_call_black_24dp"
                 android:layout_height="wrap_content"/>

             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="@dimen/size_big_72"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="bottom"
                 android:layout_marginLeft="@dimen/spacing_medium_32"
                 android:layout_marginRight="@dimen/spacing_normal_16">

                 <android.support.design.widget.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <EditText
                         android:id="@+id/phone_et"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Мобильный телефон"
                         android:inputType="phone"
                         android:enabled="true"
                         android:textColor="@color/black"
                         android:textColorHint="@color/grey"
                         android:focusable="false"
                         android:textStyle="italic"/>
                 </android.support.design.widget.TextInputLayout>
             </LinearLayout>

            <ImageView
                 style="@style/icon.right"
                 android:src="@drawable/ic_phone_in_talk_black_24dp"
                 android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="@color/grey_light"
         android:layout_marginLeft="@dimen/spacing_larger_72"/>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="@dimen/spacing_small_8"
         android:layout_marginBottom="@dimen/spacing_small_8">
         <ImageView
             style="@style/icon.left"
             android:src="@drawable/ic_email_black_24dp"
             android:layout_height="wrap_content"/>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="@dimen/size_big_72"
             android:layout_weight="1"
             android:orientation="vertical"
             android:gravity="bottom"
             android:layout_marginLeft="@dimen/spacing_medium_32"
             android:layout_marginRight="@dimen/spacing_normal_16">

             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <EditText
                     android:id="@+id/email_et"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="E-mail"
                     android:inputType="textEmailAddress"
                     android:enabled="false"
                     android:textColor="@color/black"
                     android:textColorHint="@color/grey"
                     android:focusable="false"
                     android:textStyle="italic"
                     />
             </android.support.design.widget.TextInputLayout>
         </LinearLayout>

         <ImageView
             style="@style/icon.right"
             android:src="@drawable/ic_send_black_24dp"
             android:layout_height="wrap_content"/>
     </LinearLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@color/grey_light"
             android:layout_marginLeft="@dimen/spacing_larger_72"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/spacing_small_8"
             android:layout_marginBottom="@dimen/spacing_small_8">
             <ImageView
                 style="@style/icon.left"
                 android:src="@drawable/ic_vk_circle_black_24dp"
                 android:layout_height="match_parent"/>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="@dimen/size_big_72"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="bottom"
                 android:layout_marginLeft="@dimen/spacing_medium_32"
                 android:layout_marginRight="@dimen/spacing_normal_16"
                 >
                 <android.support.design.widget.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     >
                     <EditText
                         android:id="@+id/vk_et"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Профиль в VK"
                         android:inputType="text"
                         android:enabled="false"
                         android:textColor="@color/black"
                         android:textColorHint="@color/grey"
                         android:focusable="false"
                         android:textStyle="italic"
                         />


                 </android.support.design.widget.TextInputLayout>
             </LinearLayout>
             <ImageView
                 style="@style/icon.right"
                 android:src="@drawable/ic_remove_red_eye_black_24dp"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@color/grey_light"
             android:layout_marginLeft="@dimen/spacing_larger_72"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/spacing_small_8"
             android:layout_marginBottom="@dimen/spacing_small_8">
             <ImageView
                 style="@style/icon.left"
                 android:src="@drawable/github"
                 android:layout_height="wrap_content"/>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="@dimen/size_big_72"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="bottom"
                 android:layout_marginLeft="@dimen/spacing_medium_32"
                 android:layout_marginRight="@dimen/spacing_normal_16"
                 >
                 <android.support.design.widget.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     >
                     <EditText
                         android:id="@+id/github_et"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Репазиторий"
                         android:inputType="text"
                         android:enabled="false"
                         android:textColor="@color/black"
                         android:textColorHint="@color/grey"
                         android:focusable="false"
                         android:textStyle="italic"
                         />


                 </android.support.design.widget.TextInputLayout>
             </LinearLayout>
             <ImageView
                 style="@style/icon.right"
                 android:src="@drawable/ic_remove_red_eye_black_24dp"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@color/grey_light"
             android:layout_marginLeft="@dimen/spacing_larger_72"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/spacing_small_8"
             android:layout_marginBottom="@dimen/spacing_small_8">
             <ImageView
                 style="@style/icon.left"
                 android:src="@drawable/ic_account_circle_black_24dp"
                 android:layout_height="wrap_content"/>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="@dimen/size_big_72"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="bottom"
                 android:layout_marginLeft="@dimen/spacing_medium_32"
                 android:layout_marginRight="@dimen/spacing_normal_16"
                 >
                 <android.support.design.widget.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     >
                     <EditText
                         android:id="@+id/account_et"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="О себе"
                         android:enabled="false"
                         android:textColor="@color/black"
                         android:textColorHint="@color/grey"
                         android:focusable="false"
                         android:textStyle="italic"
                         />


                 </android.support.design.widget.TextInputLayout>
             </LinearLayout>

         </LinearLayout>

        <View
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@color/grey_light"
             android:layout_marginLeft="@dimen/spacing_larger_72"/>

</LinearLayout>